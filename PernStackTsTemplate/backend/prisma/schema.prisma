generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String       @id @default(cuid())
  email     String       @unique
  password  String
  fullName  String
  username String
  appleMusicToken String?
  tokenExpiryDate DateTime?
  
  library         Library?
  libraryId       String?
}

model Library {
  id      String  @id @default(cuid())
  albums  Album[]
  user    User    @relation(fields: [userId], references: [id])
  userId  String  @unique
}

model Album {
  id         String   @id @default(cuid())
  albumId    String   @unique
  href String
  type  String
  name       String
  artistName String
  artworkUrl String
  trackCount Int
  library    Library  @relation(fields: [libraryId], references: [id])
  libraryId  String
}
