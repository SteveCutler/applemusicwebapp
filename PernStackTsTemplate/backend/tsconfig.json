{
    "compilerOptions": {
        "target": "ES2020", // Specifies what version of ECMAScript the code should be compiled to.
        "module": "commonjs", // Specifies what module code should be generated.
        "moduleResolution": "node", // Specifies how TypeScript should resolve module imports.
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true, // Enable all strict type-checking options.
        "esModuleInterop": true, // This will allow you to use default imports with CommonJS modules.
        "skipLibCheck": true, // this option will skip type checking all .d.ts files.
        "forceConsistentCasingInFileNames": true // Ensure file names are case-consistent.
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
